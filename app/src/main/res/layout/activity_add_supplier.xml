<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSupplier">

    <include
        android:id="@+id/register_supplier_toolbar"
        layout="@layout/appbar_layout">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_editor_absoluteX="8sp"
        app:layout_editor_absoluteY="8dp"
        android:layout_below="@+id/register_supplier_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/register_supplier_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register Supplier"
                    android:layout_marginTop="30dp"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/register_supplier_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your name"
                    android:background="@drawable/input_search"
                    android:textSize="20sp"
                    android:padding="10sp"
                    android:inputType="text"
                    android:layout_margin="15dp"
                    android:layout_below="@id/register_supplier_text"/>

                <EditText
                    android:id="@+id/register_supplier_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your address"
                    android:background="@drawable/input_search"
                    android:textSize="20sp"
                    android:padding="10sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:inputType="textMultiLine"
                    android:layout_below="@id/register_supplier_name"/>

                <EditText
                    android:id="@+id/register_supplier_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your mobile number"
                    android:background="@drawable/input_search"
                    android:textSize="20sp"
                    android:padding="10sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:inputType="phone"
                    android:layout_below="@id/register_supplier_address"/>

                <EditText
                    android:id="@+id/register_supplier_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email"
                    android:background="@drawable/input_search"
                    android:textSize="20sp"
                    android:padding="10sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:inputType="textEmailAddress"
                    android:layout_below="@id/register_supplier_phone"/>

                <LinearLayout
                    android:id="@+id/register_supplier_item_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/register_supplier_email">

                </LinearLayout>

                <EditText
                    android:id="@+id/register_supplier_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your password"
                    android:background="@drawable/input_search"
                    android:textSize="20sp"
                    android:padding="10sp"
                    android:inputType="textPassword"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/register_supplier_item_list"/>

                <EditText
                    android:id="@+id/register_supplier_repassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your password again"
                    android:background="@drawable/input_search"
                    android:textSize="20sp"
                    android:padding="10sp"
                    android:inputType="textPassword"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/register_supplier_password"/>

                <Button
                    android:id="@+id/register_supplier_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add supplier"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:background="@drawable/button"
                    android:layout_margin="15dp"
                    android:layout_below="@id/register_supplier_repassword"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>