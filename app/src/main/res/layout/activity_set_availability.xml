<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guni.uvpce.ceit.food.activity.SetAvailabilityActivity">

    <include
        android:id="@+id/set_availability_toolbar"
        layout="@layout/appbar_layout">
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/set_availability_toolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_editor_absoluteX="8sp"
            app:layout_editor_absoluteY="8dp">

            <RelativeLayout
                android:id="@+id/event_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Spinner
                    android:id="@+id/set_availability_select_category"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/input"
                    android:spinnerMode="dropdown" />


                <Spinner
                    android:id="@+id/set_availability_select_item"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/set_availability_select_category"
                    android:background="@drawable/input"
                    android:spinnerMode="dropdown" />


                <Spinner
                    android:id="@+id/set_availability_select_status"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/input"
                    android:layout_below="@id/set_availability_select_item"
                    android:spinnerMode="dropdown" />

                <Button
                    android:id="@+id/set_availability_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Availability"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button"
                    android:layout_below="@id/set_availability_select_status"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>